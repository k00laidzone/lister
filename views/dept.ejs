<% layout( 'layout' ) -%>
<div class="jumbotron">
  <h1>Departments</h1>
  <p>Welcome to the departments section</p>
</div>


<div class="row">
    <div class="col-sm-4">
      <form action="/createdept" method="post" accept-charset="utf-8">
        <table width="100%">
        <td colspan=2> <strong>Create new department.</strong> </td>
    	    <tr>
    	    	<td>Department</td>
    	    	<td><input class="input" type="text" name="deptName" value="" /></td>
    	    </tr>
          <tr><td colspan="2"><button type="submit" class="btn btn-xs btn-default">Add</button></td></tr>
    	</table>
      </form>
  </div>
</div>


<div class="row">
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Departments</h3></div>
          <div class="panel-body">
          <table width="100%" border="0" class="table table-striped">

            <% dept.forEach( function ( item ){ %>
            <tr>
                <td style="padding:5px"><a class="update-link" href="/editdept/<%= item._id %>" title="Update this store"><%= item.deptName %></a></td>
                <td align="right"><button type="button" onClick="location.href='/destroydept/<%= item._id %>'" class="btn btn-xs btn-danger">Del</button></td>
            </tr>
            <% }); %>
          
          </table>
          </div>
        </div>
    </div>
</div>