<% layout( 'layout' ) -%>

<h2><%= title %></h2>


<% list.forEach( function ( item ){ %>
    <% if( item._id == current ){ %>
    <div class="row">
    <div class="col-sm-4 work-list">
    <h3>Edit <%= item.productName %></h3>
    <div class="work-space">        

    <form action="/update/<%= item._id %>" method="post" accept-charset="utf-8">
    <table width="100%">
      <tr>
        <td>Quantity</td>
        <td><input class="input" type="number" name="quantity" value="<%= item.quantity %>" /></td>
      </tr>
      <tr>
        <td>Product</td>
        <td><input class="input" type="text" name="productName" value="<%= item.productName %>" /></td>
      </tr>
      <tr>
        <td>Store</td>
        <td>
          <select name='store' id="store" class="dropinput">
            <% stores.forEach( function ( store ){ %>
              <% if(item.store == store.storeName){ %>
                <option value="<%= store.id %>" selected="selected"><%= store.storeName %></option>
              <% } else { %>
                <option value="<%= store.id %>"><%= store.storeName %></option>
              <% } %>
            <% }); %>
          </select>
        </td>
      </tr>
      <tr>
        <td>Departments</td>
        <td>
          <select name='dept' id="dept" class="dropinput">
            <% dept.forEach( function ( dept ){ %>
              <% if(item.dept == dept.id){ %>
                <option value="<%= dept.id %>" selected="selected"><%= dept.deptName %></option>
              <% } else { %>
                <option value="<%= dept.id %>"><%= dept.deptName %></option>
              <% } %>
            <% }); %>
          </select>
        </td>
      </tr>
      <tr>
          <td colspan="2"><button type="button" onClick="location.href='/destroy/<%= item._id %>'" class="btnadd btn-xs btn-danger"  style="margin:10px 0; padding: 4px 7px;">Del</button>
      <button class="btnadd btn-xs btn-default-add" style="margin:10px 10px 10px 0; padding: 4px 7px;" type="submit">Save</button></td>
      </tr>
      </table>
  </form>

  </div>
  </div>
  </div>

  <% } %>
  <% }); %>

  </div>
  </div>