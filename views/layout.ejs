<header class="header">
  <div class="container">
    <div class="row">
      <div class="col-md-4 ">
        <div class="navbar-header">
              <button type="button" class="navbar-toggle menu-button" data-toggle="collapse" data-target="#myNavbar">
                  <span class="glyphicon glyphicon-align-justify"></span>
              </button>
                <a class="navbar-brand logo" href="/">Trish&#39;s Shopping List</a>
                <a class="navbar-brand logosmall" href="/"><img src="/images/logo.png" data-toggle="collapse" data-target="#myNavbar"></a>

          </div>
      </div>
      <div class="col-md-8">
        <nav class="collapse navbar-collapse" id="myNavbar" role="navigation">
          <ul class="nav navbar-nav navbar-right menu">
              <% if (login) {;%>
              <li><a href="/list" class="page-scroll active">List</a></li>
              <li><a href="/dept" class="page-scroll active">Departments</a></li>
              <li><a href="/stores" class="page-scroll active">Stores</a></li>
            <% } %>
              <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Account <span class="caret"></span></a>
              <ul class="dropdown-menu">
                
                <% if (login) {;%>
                <li><a href="/profile" class="page-scroll active">Profile</a></li>
                <li><a href="/logout" class="page-scroll active">Logout</a></li>
                <% } else { %>
                <li><a href="/login" class="page-scroll active">Log in</a></li>
                <li><a href="/signup" class="page-scroll active">Sign up</a></li>
                <% } %>
                
                
              </ul>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>
</header>


    <div class="container-fluid main" role="main">
    <%- body %>

