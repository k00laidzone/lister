<% layout( 'layout' ) -%>

<div class="row">
    <div class="col-sm-4">
  <form action="/createdept" method="post" accept-charset="utf-8">
    <table width="100%">
    <tr><td colspan=2> <strong>Create new department</strong> </td></tr>
      <tr>
        <td>Dept</td>
        <td><input class="input" type="text" name="deptName" value="" /></td>
      </tr>
      <tr>
        <td colspan=2>
              <% stores.forEach( function ( store ){ %>
                  <input type="checkbox" name="storesel[]" value="<%= store.id %>"><%= store.storeName %><br> 
            <% }); %>
            </td>
        
        <td></td>
      </tr>
      <tr><td colspan="2"><button type="submit" class="btn btn-xs btn-default">Add</button></td></tr>
   </table>
  </form>
</div>
</div>


<% dept.forEach( function ( item ){ %>

    <% if( item._id == current ){ %>

<div class="row">
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Edit Department</h3></div>
          <div class="panel-body">
    
            <form class="update-form" action="/updatedept/<%= item._id %>" method="post" accept-charset="utf-8">
              <input class="update-input" type="text" name="deptName" value="<%= item.deptName %>" />
              <div>

              <% stores.forEach( function ( store ){ %>
                <% if(item.store.indexOf(store.id) > -1){ %>
                  <input type="checkbox" name="storesel[]" checked value="<%= store.id %>"><%= store.storeName %><br> 
                <% } else { %>
                  <input type="checkbox" name="storesel[]" value="<%= store.id %>"><%= store.storeName %><br> 
                <% } %>

              <% }); %>

            <br>
            </div>
            <button type="button" onClick="location.href='/destroydept/<%= item._id %>'" class="btn btn-xs btn-danger">Del</button>
              <button class="btn btn-xs btn-success right" type="submit">Save</button>
            </form>         
          </div>
        </div>
    </div>
</div>

      <% }else{ %>
      <div class="row">
    <div class="col-sm-4">
        <table class="table table-striped">
        <tr>
        <td> <a href="/editdept/<%= item._id %>" title="Update this department"><%= item.deptName %></a> </td>
        <td> <button style="float:right;" type="button" onClick="location.href='/destroydept/<%= item._id %>'" class="btn btn-xs btn-danger">Del</button> </td>
        </tr>
        </table>
        </div></div>
      <% } %>

    <% }); %>
</div>
