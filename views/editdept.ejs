<% layout( 'layout' ) -%>



<% dept.forEach( function ( item ){ %>

    <% if( item._id == current ){ %>

<div class="row">
    <div class="col-sm-4">
      <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Edit <%= item.deptName %></h3></div>
          <div class="panel-body">
    
            <form class="update-form" action="/updatedept/<%= item._id %>" method="post" accept-charset="utf-8">
              <input class="update-input" type="text" name="deptName" value="<%= item.deptName %>" />
              <div>

              <% stores.forEach( function ( store ){ %>
                <% if(item.store.indexOf(store.id) > -1){ %>
                  <input type="checkbox" name="storesel[]" checked value="<%= store.id %>"><%= store.storeName %><br> 
                <% } else { %>
                  <input type="checkbox" name="storesel[]" value="<%= store.id %>"><%= store.storeName %><br> 
                <% } %>

              <% }); %>

            <br>
            </div>
            <button type="button" onClick="location.href='/destroydept/<%= item._id %>'" class="btn btn-xs btn-danger">Del</button>
              <button class="btn btn-xs btn-success right" type="submit">Save</button>
            </form>         
          </div>
        </div>
    </div>
</div>

      <% } %>

    <% }); %>
</div>
